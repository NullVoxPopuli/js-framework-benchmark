<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h1>Glimmer 0.13.1</h1>
        </div>
        <div class="col-md-6">
            <div class="row">
                <PaddedButton @id='run' @onClick={{action this.run}}>
                    Create 1,000 rows
                </PaddedButton>
                 <PaddedButton @id='runLots' @onClick={{action this.runLots}}>
                    Create 10,000 rows
                </PaddedButton>
                 <PaddedButton @id='add' @onClick={{action this.add}}>
                    Append 1,000 rows
                </PaddedButton>
                 <PaddedButton @id='update' @onClick={{action this.update}}>
                    Update every 10th row
                </PaddedButton>
                 <PaddedButton @id='clear' @onClick={{action this.clear}}>
                    Clear
                </PaddedButton>
                 <PaddedButton @id='swaprows' @onClick={{action this.swapRows}}>
                    Swap Rows
                </PaddedButton>
            </div>
        </div>
    </div>
</div>
<table class="table table-hover table-striped test-data">
    <tbody>

    {{#each this.data key="id" as |row|}}
        <tr class={{if-eq row.id rows.selected 'danger'}}>
            <td class="col-md-1">{{row.id}}</td>

            <td class="col-md-4">
                <a onclick={{action this.select row.id}}>{{row.label}}</a>
            </td>

            <td class="col-md-1">
                <a onclick={{action this.delete row.id}}>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true">
                    </span>
                </a>
            </td>

            <td class="col-md-6"></td>
        </tr>
    {{/each}}

    </tbody>
</table>
<span class="preloadicon glyphicon glyphicon-remove" aria-hidden="true"></span>
